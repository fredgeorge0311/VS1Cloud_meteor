    //localStorage.setItem("vs1Db", dbName)

    dbReq.onsuccess = () => resolve(dbReq.result);

    dbReq.onupgradeneeded = function (event) {
      let db = event.target.result;
    }

    dbReq.onerror = (event) => reject(new Error('Failed to open DB'));
